<p id="notice"><%= notice %></p>

<h1>Spam Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spam_types.each do |spam_type| %>
      <tr>
        <td><%= spam_type.name %></td>
        <td><%= link_to 'Show', spam_type %></td>
        <td><%= link_to 'Edit', edit_spam_type_path(spam_type) %></td>
        <td><%= link_to 'Destroy', spam_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

